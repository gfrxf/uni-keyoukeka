.user-info {
  padding: 30rpx;
  height: 120rpx;
  background-color: #B0EC64;
  margin-top: -2rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.user-info .user-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: white;
  border-radius: 100%;
}
.user-info .user-icon .avatar {
  width: 100%;
  height: 100%;
}
.user-info .login-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  color: white;
}
.user-info .login-info .phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  color: white;
  opacity: 0.8;
  font-size: 26rpx;
}
.user-info .login-info .phone .phone-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 5rpx;
}
.user-info .login-info .login {
  font-size: 30rpx;
  width: 129rpx;
  height: 90rpx;
  margin-right: 50rpx;
  line-height: 90rpx;
}
.user-info .login-info .nickname {
  margin-left: 350rpx;
}
.user-info .arrow {
  width: 32rpx;
  height: 40rpx;
}
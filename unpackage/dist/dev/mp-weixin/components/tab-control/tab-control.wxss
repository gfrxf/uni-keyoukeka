.tab-cntrol {
  padding: 10rpx;
  margin-top: 10rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
}
.tab-cntrol .item {
  flex: 1;
  text-align: center;
  border: 1px solid #B0EC64;
}
.tab-cntrol .item .title {
  display: inline-block;
  padding: 16rpx;
  border-bottom: 6rpx solid #fff;
}
.tab-cntrol .item.active .title {
  color: #B0EC64;
  border-bottom: 6rpx solid #B0EC64;
}